<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <remote name="lintu"
          fetch="https://github.com/LintuROM/"
          sync-c="true"
          sync-j="4"
          revision="refs/heads/fourteen" />

    <remote name="MindTheGapps"
          fetch="https://gitlab.com/MindTheGapps/"
          sync-c="true"
          sync-j="4"
          revision="upsilon" />
  
  <!-- Android Manifest  -->
  <project path="android" name="android" remote="lintu" />


  <!-- Bootable Recovery  -->
  <project path="bootable/recovery" name="android_bootable_recovery" groups="pdk" revision="lineage-21.0" remote="lintu" />

  <!-- Build  -->
  <project path="build/make" name="android_build" groups="pdk,sysui-studio" remote="lintu" >
    <linkfile dest="build/CleanSpec.mk" src="CleanSpec.mk" />
    <linkfile dest="build/buildspec.mk.default" src="buildspec.mk.default" />
    <linkfile dest="build/core" src="core" />
    <linkfile dest="build/envsetup.sh" src="envsetup.sh" />
    <linkfile dest="build/target" src="target" />
    <linkfile dest="build/tools" src="tools" />
  </project>

  <project path="build/soong" name="android_build_soong" groups="pdk,tradefed" remote="lintu" >
    <linkfile dest="Android.bp" src="root.bp" />
    <linkfile dest="bootstrap.bash" src="bootstrap.bash" />
  </project>

  <!-- Device  -->
  <project path="device/lintu/sepolicy" name="android_device_lintu_sepolicy" remote="lintu" />

<!-- Other Packages -->
<project path="packages/apps/LintuSettings" name="android_packages_apps_Personalizations" groups="pdk-fs" remote="lintu" />

<!-- AOSP Packages -->
<project path="packages/apps/Settings" name="android_packages_apps_Settings" groups="pdk-fs" remote="lintu" />

<!-- Frameworks -->
<project path="frameworks/base" name="android_frameworks_base" groups="pdk-cw-fs,pdk-fs,sysui-studio" remote="lintu" />

<!-- Vendor Stuff -->
<project path="vendor/lintu" name="android_vendor_lintu" remote="lintu" />
<project path="vendor/pixel-framework" name="vendor_pixel-framework" revision="14" remote="lintu" />
<project path="vendor/fontage" name="vendor_fontage" revision="14" remote="lintu" />
<project path="vendor/overlay" name="vendor_overlay" revision="14" remote="lintu" />

<!-- MindTheGapps -->
<project path="vendor/gapps" name="vendor_gapps" remote="MindTheGapps" />
  
</manifest>
